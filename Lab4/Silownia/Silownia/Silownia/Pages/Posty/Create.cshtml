@page
@model Silownia.CreateModel

<h4>Utwórz nowy wpis</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="width: 800px;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Data" class="control-label"></label>
                <input asp-for="Post.Data" class="form-control" />
                <span asp-validation-for="Post.Data" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Post.CzyBlog" /> Cokolwiek
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Post.Tresc" class="control-label">Treść</label>
                <input asp-for="Post.Tresc" class="form-control" style="size=50;"/>
                <span asp-validation-for="Post.Tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Tytul" class="control-label">Tytuł</label>
                <input asp-for="Post.Tytul" class="form-control" />
                <span asp-validation-for="Post.Tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Zdjecie" class="control-label">Ścieżka do zdjęcia</label>
                <input asp-for="Post.Zdjecie" class="form-control" />
                <span asp-validation-for="Post.Zdjecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
